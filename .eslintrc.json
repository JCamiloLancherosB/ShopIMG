{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
    },
    
    "editor.formatOnSave": true, 
    "editor.tabSize": 2, 
    "files.eol": "\n", 
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
        }, 
        "prettier.singleQuote":true, 
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        }
}
